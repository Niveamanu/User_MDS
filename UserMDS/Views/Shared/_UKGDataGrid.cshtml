@using UserMDS.Models
@model IEnumerable<UKGProdCenterModel>
@{
    Layout = null;
}

@if (Model.Count() > 0)
{

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade  overflow-auto show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            <table id="consolidateData" class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Plant</th>
                        <th>Cost Center</th>
                        <th>Shift</th>


                    </tr>
                </thead>
                @foreach (UKGProdCenterModel result in Model)
                {
                    <tr>
                        <td>@result.Plant</td>
                        <td>@result.Cost_Center</td>
                        <td>@result.Shift</td>

                    </tr>
                }
            </table>
        </div>

    </div>

}
<script type="text/javascript">
    $(document).ready(function () {

        let table = new DataTable({
            dom: 'Bfrtip',
            buttons: [

                'excelHtml5'


            ]
        });


    });

</script>
