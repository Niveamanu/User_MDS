@using UserMDS.Models
@model IEnumerable<ManualKPIMetricsValueModel>
@{
    Layout = null;
}
<div id="menu">
    <ul class="k-menu k-header k-reset k-widget k-menu-horizontal" id="Menu" data-role="menu"
        aria-orientation="horizontal" tabindex="0" role="menubar" aria-activedescendant="Menu_mn_active">
        <li class="k-item k-menu-item k-first" aria-haspopup="true" aria-expanded="false" role="menuitem"
            id="Menu_mn_active">
            <span class="k-link k-menu-link">
                <a href="/">

                    <span class="k-menu-link-text">Back To Dashboard</span>
                </a>
            </span>
        </li>

    </ul>

</div>
@if (Model.Count() > 0)
{

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade  overflow-auto show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            <table class="ManualKPIMetricsValue table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>S.No</th>
                        <th>Effective Date From</th>
                        <th>Business Unit</th>
                        <th> LHL LOC</th>
                        <th>Weekly Overhead PNW EQ FSC NOC</th>
                        <th>Weekly Overhead Other</th>
                        <th>Weekly Overhead Projection</th>
                        <th>Domain</th>
                        <th>Maintained By</th>
                        <th>Created Date</th>
                        <th>Modified Date</th>
                        @*     <th>Created By</th>*@


                    </tr>
                </thead>
                @{

                    int counter = 1;
                    @foreach (ManualKPIMetricsValueModel result in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@result.effective_date_from</td>
                            <td>@result.business_unit</td>
                            <td>@result.lhl_loc</td>
                            <td>@result.weekly_overhead_pnw_eq_fsc_noc</td>
                            <td>@result.weekly_overhead_other</td>
                            <td>@result.weekly_overhead_projection</td>
                            <td>@result.domain</td>
                            <td>@result.maintained_by</td>
                            <td>@result.created_date</td>
                            <td>@result.modified_date</td>
                            @* <td>@result.created_by</td>*@


                        </tr>
                        counter++;
                    }
                }
            </table>
        </div>

    </div>

}
<script type="text/javascript">
    $(document).ready(function () {

        let table = new DataTable('.ManualKPIMetricsValue', {
            dom: 'Bfrtip',
            buttons: [

                'excelHtml5'


            ]
        });


    });

</script>

